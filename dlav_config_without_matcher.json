{
	"name": "baseline_without_matcher",
	"model": {
		"backbone_save": "model/model_saves/hrt_small_coco_384x288.pth",
		"model_saves": "model/model_saves",
		"bn_momentum": 0.1,
		"decode_output": false,
		"add_positional_encoding": true,
		"nhead": 4,
		"num_layers": 6,
		"use_matcher": false
	},
	"decoder":{
		"threshold" : 0.15,
		"max_distance" : 0.2
	},
	"dataset": {
		"data_path": "dlav_data",
		"segm_path": "segm_npy",
		"img_path": "images",
		"seed": 42,
		"shuffle": true,
		"nb_keypoints": 24,
		"nb_links": 49,
		"max_nb": 20,
		"annotations_folder": "annotations",
		"img_size": [3384, 2710],
		"input_size": [640, 480],
		"normalize_position": true
	},
	"hardware": {
		"use_cuda" : true,
		"num_gpu": 1,
		"specific_gpu": 1,
		"num_workers": 4
	},
	"training": {
		"batch_size": 8,
		"train_backbone": false,
		"clip_grad_value": 10000,
		"epochs": 80,
		"loss_keypoints": {
			"cost_class": 1,
			"cost_distance": 1,
			"cost_OKS": 0,
			"scale_factor": 100
		},
		"loss_links": {
			"cost_class": 1,
			"cost_distance": 1,
			"cost_OKS": 0,
			"scale_factor": 100
		},
		"optimizer": {
			"name": "adamw",
			"learning_rate": 1e-3,
			"betas": [0.9, 0.999],
			"weight_decay": 0
		},
		"lr_scheduler": {
			"name": "step",
			"decay_factor": 0.9,
			"milestones": [
				2,
				5,
				7,
				10,
				12,
				15,
				20,
				25,
				30
			],
			"mode": "max",
			"patience": 2,
			"nb_step": 5
		}
	},
	"data_augmentation": {
		"use_occlusion_data_augm": false,
		"prob_occlusion": 0.1,
		"prob_blur": 0.1,
		"blur_radius": 30,
		"nb_blur_source": 10,
		"apply_augm": false,
		"normalize": {
			"mean": [0.485, 0.456, 0.406],
			"std": [0.229, 0.224, 0.225]
		}
	},
	"logging": {
		"log_dir": "log_dir"
	}
}